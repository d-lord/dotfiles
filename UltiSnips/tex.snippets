# \begin{}...\end{}
snippet begin
\begin{${1:env}}
    ${0}
\end{$1}
endsnippet

# an ASA command textbox
snippet asa
\begin{lstlisting}[style=cisco]
${0}
\end{lstlisting}
endsnippet

# an image with a label and caption
# filepath makes suggestions which must be navigated with c-n and c-p:
# tab will jump to next field
snippet pic
\begin{figure}
    \label{fig:${1:label}}
    \includegraphics[width=\linewidth]{./img/$2}
    \caption{$3}
\end{figure}
endsnippet
